<mvc:View class="sapUiSizeCompact" controllerName="HeavensKitchen.controller.View1" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:tnt="sap.tnt">
	<App>
		<pages>
			<Page showHeader="false">
				<content>
					<Table items="{/}">
						<headerToolbar>
							<Toolbar>
								<content>
									<Title text="Nasko" level="H2"/>
										<ToolbarSpacer />
										<Button id="addBtn"
											press="onAddItem"
											icon="sap-icon://add"/>
									</content>
								</Toolbar>
							</headerToolbar>
						<columns>
							<Column
								width="5em"
								vAlign="Middle">
								<Text text="ID" />
							</Column>
							<Column
								vAlign="Middle">
								<Text text="Product" />
							</Column>
							<Column
								vAlign="Middle">
								<Text text="Description"/>
							</Column>
							<Column
								vAlign="Middle">
								<Text text="Price" />
							</Column>
							<Column hAlign="End"/>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<ObjectIdentifier
										title="{id}"/>
									<Text
										text="{name}" />
									<Text
										text="{description}" />
									<Text
										text="{price}" />
									
									<HBox justifyContent="End">
										<Button icon="sap-icon://edit" press="onEditItem" type="Transparent"/>
										<Button icon="sap-icon://delete" press="onDeleteItem" type="Transparent"/>
									</HBox>	
								</cells>
							</ColumnListItem>
						</items>
					</Table>
					
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>